<!--無限スクロール-->
<div class="scroll-list jscroll">
  <% @posts.each do |post| %>
  <div>
    <%= link_to post_path(post.id) do %>
      <%= attachment_image_tag post, :image, :fill, 200, 200 %>
    <% end %>
    <p>説明：<%= post.content %></p>
    <p>ユーザー名：<%= post.user.name %></p>
    <p><%= link_to "#{post.comments.count} コメント", post_path(post.id) %></p>
  </div>
  <% end %>
  <!--ページ表示部分-->
  <%= paginate @posts %>
</div>