<% posts.each do |post| %>
  <%= link_to post_path(post.id) do %>
    <%= attachment_image_tag post, :image, :fill, 200, 200 %>
  <% end %>
  <p>説明：<%= post.content %></p>
  <p>
    <%= link_to user_path(post.user) do %>
      ユーザー名：<%= post.user.name %>
    <% end %>
  </p>
  <p><%= link_to "#{post.comments.count} コメント", post_path(post.id) %></p>
  <% if current_user == post.user %>
    <%= link_to "編集", edit_post_path(post) %>
    <%= link_to "削除", post_path(post), method: :delete %>
  <% end %>
  <div>
    <%= link_to "https://twitter.com/share?url=#{ request.url }&text=【テスト】%0a%0a#{ post.content }、シェアさいこう〜", target: '_blank' do %>
      <i class="fab fa-twitter" style='color: #3399FF;'></i>シェア
    <% end %>
  </div>
<% end %>
