<!--配列の1つ目から順に1位、２位と表示される-->
<% post_ranks.each.with_index(1) do |post, i| %>
<div>
  第<%= i %>位
  <%= link_to post_path(post.id) do %>
    <%= attachment_image_tag post, :image, :fill, 100, 100 %>
  <% end %>
  <p>説明：<%= post.content %></p>
  <p>ユーザー名：<%= post.user.name %></p>
  <p><%= link_to "#{post.comments.count} コメント", post_path(post.id) %></p>
</div>
<% end %>